package com.chirag.sudoku;

public class theGame {
	
	public int arr[][] = new int[6][6];
	private int row_count[]= new int[6];
	private int col_count[] = new int[6];
	private int diag_count[] = new int[6];
	theGame()
	{
		for(int i=0;i<6;i++)
			for(int j=0;j<6;j++)
					arr[i][j]=0;
		for(int i=0;i<6;i++)
		{
			row_count[i] = 0;
			col_count[i] = 0;
		}
	}
	
	private void check_row(int val,int i,int j)
	{
		//row
		int col;
		for(col=0;col<5;col++)
			if(arr[i][col]!=val)
				break;
		if(col==5)
		{
			return ;
		}
		
		for(col=1;col<6;col++)
			if(arr[i][col]!=val)
				break;
		if(col==6)
		{
			return ;
		}
	}
	private void check_col(int val,int i,int j)
	{	
		//columns
		int row;
		int col;
		for(row=0;row<5;row++)
			if(arr[row][j]!=val)
				break;
		if(row==5)
		{
			return ;
		}
		for(row=1;row<6;row++)
			if(arr[row][j]!=val)
				break;
		if(row==6)
		{
			return ;
		}
	}
	private void check_diag(int val,int i,int j)
	{	
		//diagonal
		int col;int row;
		row=i;col=j;
		int sum = i+j;
		if(sum==4 )
		{
			for(row=0,col=4;row<5 && col>=0;row++,col--)
				if(arr[row][col]!=val)
					break;
			if(row==5 && col==-1)
				return;
		}
		if(sum==5)
		{
			for(row=0,col=5;row<5 && col>=1;row++,col--)
				if(arr[row][col]!=val)
					break;
			if(row==5 && col==0)
				return;
			
			for(row=1,col=5;row<6 && col>=0;row++,col--)
				if(arr[row][col]!=val)
					break;
			if(row==6 && col==-1)
				return;
		}
		
		if(sum==6)
		{
			for(row=1,col=5;row<6 && col>=1;row++,col--)
				if(arr[row][col]!=val)
					break;
			if(row==6 && col==0)
				return;
		}	
	}
	
	
	public void setValue(int val,int i,int j)
	{
		arr[i][j] = val;
		row_count[i]++;
		if(row_count[i]>=5)
			check_row(val,i,j);
		col_count[j]++;
		if(col_count[j]>=5)
			check_col(val,i,j);
		diag_count[i+j]++;
		if(diag_count[i+j]>=5);
		
	}
}
