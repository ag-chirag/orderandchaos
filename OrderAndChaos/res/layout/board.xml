            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/tgl_btn"
            android:onClick="tgl"
            android:layout_marginRight="5dp"
            android:textOff="O"
            android:textOn="O"
            android:textSize="40sp"
            android:textAlignment="center"
             />

        <ToggleButton
            android:id="@+id/x"
